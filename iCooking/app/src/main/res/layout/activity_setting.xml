<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.win81pro.icooking2.Setting"
    android:orientation="vertical"
    android:background="#ffffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ประเภทอาหารที่ชื่นชอบ"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#ff0a0a06"
        android:layout_marginRight="10dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="67dp"
        android:id="@+id/settype">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ทอด"
                android:id="@+id/cktype3"
                android:checked="false"
                android:layout_marginLeft="55dp"
                android:textSize="18dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ผัด"
                android:id="@+id/cktype4"
                android:checked="false"
                android:layout_marginLeft="20dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ต้ม"
                android:id="@+id/cktype1"
                android:checked="false"
                android:layout_marginLeft="65dp"
                android:textSize="18dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="นึ่ง"
                android:id="@+id/cktype2"
                android:checked="false"
                android:layout_marginLeft="30dp"
                android:textSize="18dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="สัญชาติอาหารที่ชื่นชอบ"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff0a0a06"
        android:textSize="24dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไทย"
            android:id="@+id/checknation1"
            android:checked="false"
            android:layout_marginLeft="65dp"
            android:textSize="18dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จีน"
            android:id="@+id/checknation2"
            android:checked="false"
            android:layout_marginLeft="20dp"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ญี่ปุ่น"
            android:id="@+id/checknation3"
            android:checked="false"
            android:layout_marginLeft="65dp"
            android:textSize="18dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="อิตาเลียน"
            android:id="@+id/checknation4"
            android:checked="false"
            android:layout_marginLeft="15dp"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วัตถุดิบที่แพ้"
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#ff0a0a06"
        android:layout_marginRight="10dp"
        android:textIsSelectable="false"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="หมู"
            android:id="@+id/checkallergic1"
            android:checked="false"
            android:layout_marginLeft="65dp"
            android:textSize="18dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไก่"
            android:id="@+id/checkallergic2"
            android:checked="false"
            android:layout_marginLeft="30dp"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ปลา"
            android:id="@+id/checkallergic3"
            android:checked="false"
            android:layout_marginLeft="65dp"
            android:textSize="18dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เนื้อ"
            android:id="@+id/checkallergic4"
            android:checked="false"
            android:layout_marginLeft="23dp"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="กุ้ง"
            android:id="@+id/checkallergic5"
            android:checked="false"
            android:layout_marginLeft="65dp"
            android:textSize="18dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไม่แพ้"
            android:id="@+id/checkallergic6"
            android:checked="false"
            android:layout_marginLeft="33dp"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="บันทึก"
            android:id="@+id/btsavesetting"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textSize="24dp" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="ยกเลิก"
            android:id="@+id/btcancle"
            android:onClick="onClick_canclesetting"
            android:textStyle="bold"
            android:textSize="24dp" />
    </LinearLayout>



</LinearLayout>
